doctype html
html(lang='en', ng-app='app')
    head
        meta(charset='utf-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name='viewport', content='width=device-width', initial-scale='2.0')
        meta(name='description', content='')
        meta(name='author', content='')
        title(ng-bind-template='Jinkubator')
        link(rel='stylesheet', href='css/app.css')
        //-script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
        //if lte IE 7
            script(src='http://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js')
        //if lte IE 8
            script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
        script
            window.brunch = window.brunch || {};
            window.brunch['auto-reload'] = {
                enabled: true
            };
        script(src='js/vendor.js')
        script(src='js/app.js')
    body(ng-controller='AppCtrl')
        .top-menu
            .top-menu-inner
                a(href='#/home').brand wjug
                .nav(ng-include="'partials/nav.html'")
        .wrapper
            .main-content
                div(ng-switch="subview").subview
                    div(ng-switch-when="loading", ui-animate)
                            .section(page='1')
                                .centered
                                    .container
                                        .row
                                            .span12
                                                p loading...
                    div(ng-switch-when="main_page", ng-include=" 'partials/main_page.html' ", ui-animate)
                    div(ng-switch-when="prelegents", ng-include=" 'partials/prelegents.html' ", ui-animate)
                    - for (var meeting_id = 1; meeting_id <= 19; meeting_id++)
                        div(ng-switch-when="meeting" + meeting_id, ng-include!="'partials/meeting/".concat(meeting_id, ".html'"), ui-animate)
            .push

        .footer
            .container(ng-include=" 'partials/footer.html' ")
